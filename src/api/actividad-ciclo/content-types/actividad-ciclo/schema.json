{
  "kind": "collectionType",
  "collectionName": "actividad_ciclos",
  "info": {
    "singularName": "actividad-ciclo",
    "pluralName": "actividad-ciclos",
    "displayName": "Actividad Ciclo"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {}, 
  "attributes": {
    "Nombre": {
      "type": "string"
    },
    "Frase_Actividad": {
      "type": "richtext"
    },
    "Color": {
      "type": "customField",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$",
      "customField": "plugin::color-picker.color"
    },
    "Imagen": {
      "allowedTypes": [
        "images"
      ],
      "type": "media",
      "multiple": false
    },
    "estado_de_animos": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::estado-de-animo.estado-de-animo",
      "inversedBy": "actividad_ciclos"
    },
    "categorias": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::categoria.categoria",
      "mappedBy": "actividad_ciclos"
    }
  }
}
